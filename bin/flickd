#! /usr/bin/env zsh

# flickd â€” run flickpaper continuously as daemon

TMPDIR=${TMPDIR=/tmp}

daemonize -o $TMPDIR/flickpapr.log \
  -p $TMPDIR/flickpapr.pid \
  -l $TMPDIR/flickpapr.lock \
  -v ${0:a:h}/flickloop
print 'Stop with:'
print "kill -TERM \`cat $TMPDIR/flickpapr.pid\`"
print "rm $TMPDIR/flickpapr.lock"
